{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"eslint-config-airbnb-base"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"indent": [2, "tab"],
		"no-tabs": 0,
		"no-console": 0,
		"no-alert": 0,
		"no-param-reassign": 0,
		"no-plusplus": 0,
		"no-restricted-syntax": ["error", "ForInStatement", "LabeledStatement", "WithStatement"],
		"import/extensions": [2, "ignorePackages", { "js": "always" }],
		"prefer-destructuring": ["error", {"object": true, "array": false}]
	},
	"settings": {
		"import/extensions": [
			"error",
			"ignorePackages"
		 ]
	}
}